---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

// import { getCollection } from 'astro:content';

import { zodCollectionsWithRichData } from "@/content/config";

---

<Layout title="Register">
  <section>
    <nav>
      <menu>
      {
        Object.entries(zodCollectionsWithRichData).map(
          ([itemClass, classMeta]) =>
            <Card
              href={`/item-classes/${itemClass}/p/1`}
              title={classMeta.title}
              body={classMeta.description ?? ''}
            >
              <!--div class="meta">
                <p>entries: N/A</p>
              </div-->
            </Card>
        )
      }
      </menu>
    </nav>
  </section>
</Layout>

<style lang="scss">
p {
  padding: 0;
}

.meta {
  font-size: smaller;
}

menu {
  padding: 0;
}
</style>
